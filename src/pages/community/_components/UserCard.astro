---
import maintainersWithoutAvatars from "@data/maintainers/maintainersWithoutAvatars.json";

import ProfilePicture from "@components/ProfilePicture.svelte";

interface Props {
  url: string;
  name: string;
}

const { name, url } = Astro.props;
const username = url.split("/").pop() as string;
const isPlaceholder = (maintainersWithoutAvatars as string[]).includes(username);
---

<a href={url}>
  <div class="card-user">
    <ProfilePicture {username} size={256} wxh={128} />
    <br />
    <span class=`user-name ${isPlaceholder ? "placeholder" : ""}`>{name}</span>
  </div>
</a>

<style lang="scss">
  @use "@styles/utils";

  .card-user {
    @include utils.containerPadding(md);
    border-radius: var(--border-radius-large);
    transition: scale 200ms cubic-bezier(0, 0, 0, 1);

    will-change: scale;

    // State layer
    &::after {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: inherit;
      background-color: var(--surface0);
      transition: opacity 50ms linear;
      opacity: 0;

      will-change: opacity;
      z-index: -1;
    }

    @media (hover: hover) {
      &:hover {
        text-decoration: none;
        @media (prefers-reduced-motion: no-preference) {
          scale: 1.025;
        }
        &::after {
          opacity: 1;
        }
      }
    }

    &:active {
      scale: 0.975;
      &::after {
        opacity: 0.65;
      }
    }
    background-color: var(--mantle);
    text-align: center;

    transition: scale 200ms cubic-bezier(0, 0, 0, 1);

    will-change: scale;

    // State layer
    &::after {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: inherit;
      background-color: var(--surface0);
      transition: opacity 50ms linear;
      opacity: 0;

      will-change: opacity;
      z-index: -1;
    }

    @media (hover: hover) {
      &:hover {
        text-decoration: none;
        @media (prefers-reduced-motion: no-preference) {
          scale: 1.05;
        }
        &::after {
          opacity: 1;
        }
      }
    }

    &:active {
      scale: 0.975;
      &::after {
        opacity: 0.65;
      }
    }

    img {
      border-radius: 50%;
    }

    .placeholder {
      text-decoration: line-through;
    }
  }
</style>
