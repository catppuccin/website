---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="page-intro">
  <h1>{title}</h1>

  <slot />
</section>

<style lang="scss">
  @use "@styles/utils" as *;

  .page-intro {
    margin-block-end: space(xl);
  }

  .page-intro h1 {
    color: var(--accent-color);
  }
</style>
