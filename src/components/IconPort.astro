---
import { getIcon } from "../lib/getIcon";

interface Props {
  port: string;
  height?: number;
}

const { port, height = 2.4 } = Astro.props;

const { path, viewbox } = getIcon(port);
---

<svg
  class="icon"
  height={`${height}rem`}
  role="img"
  viewBox={viewbox}
  xmlns="http://www.w3.org/2000/svg"
>
  <title>{port}</title>
  <path d={path}></path>
</svg>

<style lang="scss">
  .icon {
    fill: currentColor;
  }
</style>
