---
import type { AccentName } from "@catppuccin/palette";
import { flavors } from "@catppuccin/palette";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  accent?: AccentName;
  enableViewTransition?: boolean;
}

const {
  title,
  description,
  ogImage = "/embed.png",
  accent = "mauve",
  enableViewTransition = false,
} = Astro.props as Props;

const isVercelProd = import.meta.env.VERCEL_PROD;
---

<meta name="generator" content={Astro.generator} />
<meta name="description" content={description} />

<meta property="og:url" content="https://catppuccin.com" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta name="theme-color" content={flavors.mocha.colors[accent].hex} data-react-helmet="true" />

<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />

{isVercelProd && <script is:inline defer data-domain="catppuccin.com" src="https://p.catppuccin.com/js/script.js" />}

{enableViewTransition && <ClientRouter fallback="swap" />}

<title>{title}</title>
