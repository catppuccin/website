{
  "name": "website",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "pnpm run maintainers && pnpm run test:run && astro check && astro build",
    "check": "astro check",
    "dev": "astro dev",
    "fmt": "prettier --plugin=prettier-plugin-astro . --write",
    "icons": "pnpm tsx src/data/scripts/convertIconsToJson.ts",
    "maintainers": "pnpm tsx src/data/scripts/fetchMaintainerAvatars.ts",
    "prepare": "husky",
    "preview": "astro preview",
    "start": "astro dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:e2e": "pnpm exec playwright test",
    "test:e2e:ui": "pnpm exec playwright test --ui",
    "test:ci": "vitest run && pnpm run test:e2e"
  },
  "lint-staged": {
    "src/**/*": "pnpm run fmt"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.3.1",
    "@astrojs/mdx": "^4.2.5",
    "@astrojs/rss": "^4.0.10",
    "@astrojs/sitemap": "^3.3.1",
    "@astrojs/svelte": "^7.0.11",
    "@catppuccin/catppuccin": "github:catppuccin/catppuccin#93e8c117c474b901c433dc27023d6a7e2a2809c2",
    "@catppuccin/palette": "^1.7.1",
    "@iconify-json/ph": "^1.2.1",
    "@iconify-json/simple-icons": "^1.2.33",
    "@iconify/svelte": "^5.0.0",
    "@iconify/tools": "^4.1.2",
    "@iconify/types": "^2.0.0",
    "@playwright/test": "^1.52.0",
    "@rollup/plugin-yaml": "^4.1.2",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "^3.1.3",
    "astro": "^5.7.12",
    "astro-expressive-code": "^0.41.0",
    "astro-icon": "1.1.5",
    "fuse.js": "^7.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "mdast-util-to-string": "^4.0.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "sass": "^1.88.0",
    "sharp": "^0.34.0",
    "surge": "^0.24.6",
    "svelte": "^5.28.2",
    "svelte-intersection-observer-action": "^0.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.1.3",
    "yaml": "^2.6.1"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "sharp"
    ]
  }
}
